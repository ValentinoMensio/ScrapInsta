{
  "manifest_version": 3,
  "name": "ScrapInsta Enqueuer",
  "description": "Encola fetch_followings y env√≠a mensajes usando la cuenta del cliente.",
  "version": "0.2.0",
  "action": {
    "default_title": "ScrapInsta",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}